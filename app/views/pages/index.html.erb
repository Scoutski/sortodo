<div class="phaseBackground"></div>

<div class="overlay">
  <div class="middleOverlay">
    <div class="editTask">
    </div>
  </div>
</div>


<div id="main">
  <div id="nav"></div>

  <div class="row">
    <div id="notebook" class="col-md-2"></div>
    <div id="content" class="col-md-10"></div>
  </div>

</div>

<script id="navView" type="text/template">
  <%= link_to('Home', app_path) %> | 
  <%= link_to('Log Out', root_path, :method => :delete, :confirm => 'Are you sure?') %>
</script>

<script id="showTaskWindow" type="text/template"> 
  <!-- This is the pop-up window when you select a task. -->
  <h3>{{ name }}</h3>
  <p>Priority: {{ priority }}</p>
  {[ if (due !== null) { ]}
  <p>Due Date: {{ moment(due).format('ll') }}</p>
  {[ } ]}
  <p>Location: {{ location }}</p>
  {[ if (file !== null) { ]}
  <p>Associated file: <a href="{{ file }}" target="new">{{filename}}</a></p>
  {[ } ]}
  <button id="closeOverlay">Close Window</button>
  <button id="editTaskButton">Edit Task</button><br>
  <button id="deleteTaskButton">Delete Task</button>
</script>

<script id="editTaskWindow" type="text/template">
  <!-- This is the pop-up window when you select the edit button from the show task window. -->
  <h3>Edit Task</h3>
  <div class="field">Name: <input type="text" value="{{name}}" name="name"></div><br>
  <div class="field">Priority: 
  <select value="{{priority}}">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
  </select>
  </div><br>
  <div class="field">Due: <input type="date" value="{{moment(due).format('YYYY-MM-DD')}}" name="due"></div><br>
  <div class="field">Location: <input type="text" value="{{location}}"></div><br>
  <!-- TODO: Figure out how to do the tags ub gere... -->
  <button id="closeOverlay">Close Window</button>
  <!-- TODO: Make the below button actually work... -->
  <button id="updateTask">Update Task</button>
</script>

